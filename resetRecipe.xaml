<Window x:Class="RecipeApp.resetRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="resetRecipe" Height="583" Width="932">
    <Grid>
        <Label x:Name="titleLabel" Content="Reset Recipe" HorizontalAlignment="Left" Margin="66,24,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black"/>
        <ComboBox x:Name="recipesCB" HorizontalAlignment="Left" Margin="79,109,0,0" VerticalAlignment="Top" Width="484"/>

        
            
       
        <Label Content="Which recipe would you like to reset?" HorizontalAlignment="Left" Margin="71,83,0,0" VerticalAlignment="Top"/>
        <ScrollViewer Margin="67,201,135,64">
                <TextBlock x:Name="displayTB" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="281" Width="486" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
        </ScrollViewer>
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="80,149,0,0" VerticalAlignment="Top" Width="51" Click="resetButton_Click"/>

    </Grid>
</Window>
