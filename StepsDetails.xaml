<Window x:Class="RecipeApp.StepsDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApp"
        mc:Ignorable="d"
        Title="StepsDetails" Height="450" Width="800">
    <Grid>
        <Label x:Name="titleLabel" Content="Step" HorizontalAlignment="Left" Margin="66,24,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" FontFamily="Segoe UI Black" Height="55" Width="375"/>
        <TextBox x:Name="descriptionTB" HorizontalAlignment="Left" Margin="73,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" Height="25"/>
        <Label Content="Enter a description of what the user must do in this step:" HorizontalAlignment="Left" Margin="65,103,0,0" VerticalAlignment="Top" Height="36" Width="333"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="76,195,0,0" VerticalAlignment="Top" Width="55" Click="submitButton_Click"/>

    </Grid>
</Window>
